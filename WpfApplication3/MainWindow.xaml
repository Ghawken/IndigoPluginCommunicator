<Window x:Class="IndigoPlugin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IndigoPlugin"
        mc:Ignorable="d"
        xmlns:properties="clr-namespace:IndigoPlugin.Properties"
        Title="Indigo Plugin Communicator" Height="435.103" Width="611.086"
        ShowInTaskbar="True" FontFamily="Calibri">
    <Canvas>
        <Grid Height="319" VerticalAlignment="Top" HorizontalAlignment="Left" Width="517">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="0.3" ScaleX="0.3"/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Grid.Background>
                <ImageBrush ImageSource="Icons/indigo.ico" Stretch="None"/>
            </Grid.Background>


        </Grid>
        <Grid Margin="0,30" HorizontalAlignment="Right">
            <TextBlock Text="Indigo Plugin Communicator" FontSize="32" TextAlignment="Right" HorizontalAlignment="Right" Width="510" VerticalAlignment="Bottom" TextDecorations="Underline" />
        </Grid>
        <Grid Margin="10,90,0,0">
            <TextBox AcceptsReturn="True" VerticalAlignment="Stretch"
                     Text="v.0.1 This small app is designed to communicate with a Indigo Server (Mac OSX) and allow uptodate information to be sent/received. It also allows On/Off controls to be sent.  It requires the WinRemote Indigoplugin to be installed and running on your indigo Server." TextWrapping="Wrap" Margin="0,0,0,-37" HorizontalAlignment="Left" Width="564"></TextBox>

        </Grid>
        <Grid Height="22" Canvas.Left="10" Canvas.Top="160" Width="264">
            <TextBlock Margin="0,0,10,4" FontSize="14" Text="Enter the Server IP Port eg.192.168.1.6:9123" ></TextBlock>
            <TextBox Name="ServerIP" Margin="278,-5,-306,2" FontSize="18" Text="{Binding Source={x:Static properties:Settings.Default}, Path=ipaddress}"  ></TextBox>
            <Button Margin="0,30,-306,-27" Name="Connect" Click="ClickConnect">Connect</Button>

        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="109*"/>
                <ColumnDefinition Width="181*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Name="connectInfo" VerticalAlignment="Top" Margin="10,216,0,0" FontSize="14" TextWrapping="Wrap" Text=""
              Height="101" HorizontalAlignment="Left" Width="570" Grid.ColumnSpan="2"  ></TextBlock>
            <Button Margin="10,330,2,-6" x:Name="SaveButton" Click="SaveSettings" Content="Save and Continue" Grid.ColumnSpan="2"/>


            <CheckBox Margin="19,355,66.709,-28" Name="checkboxdebug" Checked="debug_CheckedChanged" Unchecked="debug_CheckedChanged" IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=debuglogging}">Enable Debug Logging</CheckBox>



        </Grid>

    </Canvas>
</Window>

